<div class="registration-bg2">

  <div class="devise-form col-md-6 col-md-offset-3 animated fadeIn">
    <div class="panel panel-login text-center">
      <div class="panel-heading">
        <h2>Log in</h2>
      </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "form"}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <!--<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>-->
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in",class:"form-control btn btn-login"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
