<div class="registration-bg">

  <div class="devise-form col-md-6 col-md-offset-3 animated fadeIn">
    <div class="panel panel-login text-center">
      <div class="panel-heading">
        <h2>Sign up</h2>
      </div>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "form"}) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :username, required: true, autofocus:true, label: false, placeholder: "Username", input_html: {class: "form-control"} %>
            <%= f.input :email, required: true,label: false, placeholder: "Email", input_html: {class: "form-control"}  %>
            <%= f.input :password, required: true,label: false, placeholder: "Password", input_html: {class: "form-control"} %>
            <%= f.input :password_confirmation,label: false, required: true, placeholder: "Confirm Password" %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up",class:"form-control btn btn-login" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>

</div>
