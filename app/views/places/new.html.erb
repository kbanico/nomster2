<div class="booyah-box">
  <h1 class="text-center">Enter Your Place Details</h1>

    <%= simple_form_for(@place, html: {class: "form"}) do |f| %>
      <%= f.input :name, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
      <%= f.input :address, label: false, placeholder: "Address", input_html: {class: "form-control"} %>
      <%= f.input :description, label: false, placeholder: "Description", input_html: {class: "form-control"} %>
      <br>
      <div class="col-6 offset-3">
        <%= f.submit "Create", class:"btn btn-login btn-block" %>
      </div>
    <% end %>
</div>
